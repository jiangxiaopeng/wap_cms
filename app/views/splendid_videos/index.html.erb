<header class="page_description">
	<h2>精彩推荐</h2>

	<!--<div style="margin-bottom:10px;"> <%= button_to "添加视频", new_today_video_path %></div>-->
	<div>

		<div style="margin-bottom:10px;margin-left:20px;float: left;">
	      <%= form_for(:forminfo, :url => {:action => 'index'}, :html => {:method => 'get'}) do |s| %>
	          <%= s.select :cid, @channels.collect { |c| [c.title, c.cid] }, {}, :onchange => "this.form.submit()", :with => '' %>
	      <% end %>
	    </div>

	</div>
</header>

<div class="wrap cell_16 round_all">
	<table class="fancy_rows datatable">

		<thead>
			<tr>
				<th>视频ID</th>
				<th>视频标题</th>
				<th>图片</th>
				<th>原价</th>
				<th>优惠价</th>
				<th>推荐</th>
				<!--<th>操作</th>-->
			</tr>
		</thead>
		<tbody>
			<% @videos.each do |video| %>
			<tr>
				<td><%= video.video_id %></td>
				<td><%= video.title %></td>
				<td>
					<% if video.video_img != nil %>
					<%= image_tag video.video_img,:width => 80 %>
					<% end %>
				</td>
				<td><%= video.original_price %></td>
				<td><%= video.privilege_price %></td>
				<td><%= tag "input", { "type" => "button", "value" => "取消推荐" ,"onclick" => "using('/splendid_videos/using/#{video.id}?video_type=1&forminfo=#{@channel}')"} %></td>
				<!--<td style="text-align:center;">-->
					<!--<%= link_to image_tag("edit.png"),edit_splendid_video_path(video) %>-->
					<!--<%= link_to image_tag("delete.png"), splendid_video_path(video), :confirm => "Are you sure?", :method => :delete %>-->
					<!--</td>-->
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>