<section class="">
  <% unless @channel.errors.blank? %>
      <div class="alert alert_red">
        <img height="24" width="24" src="/admin/images/icons/small/white/Alarm%20Bell.png">
        <%= t "admin.general.errors" %>: <%= errors_for @channel %>
      </div>
  <% end %>
</section>
<%= form_for @channel, :url => channels_path, :html => {:name => "form", :multipart => :true} do |v| %>
    <%= render :partial => "form", :object => @channel, :as => :channel, :locals => {:v => v} %>
    <div class="buttons">
      <%= submit_tag "提交" %>
      <%= link_to '返回', today_videos_url, :class => 'submit' %>
    </div>
<% end %>