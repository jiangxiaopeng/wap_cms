<div class="wrap block">
	<div class="">
		<div class="block">
			<%= form_for @video, :url =>"",:html => {:name => "form"} do |v| %>
			<label for="video_id">视频ID</label>
			<%= v.text_field :video_id, :size => 80, :title => "This field can't be left blank",:readonly => true %>

			<label for="title">视频名称</label>
			<%= v.text_field :title, :size => 80, :title => "This field can't be left blank",:readonly => true %>

			<label for="video_source">视频源出处</label>
			<%= v.text_field :video_source, :size => 80, :title => "This field can't be left blank",:readonly => true %>

			<label for="video_director">导演</label>
			<%= v.text_field :video_director, :size => 80, :title => "This field can't be left blank",:readonly => true %>

			<label for="video_performer">演员</label>
			<%= v.text_field :video_performer, :size => 80, :title => "This field can't be left blank",:readonly => true %>

			<label for="video_time">时长</label>
			<%= v.text_field :video_time, :size => 80, :title => "This field can't be left blank",:readonly => true %>

			<label for="video_size">视频大小</label>
			<%= v.text_field :video_size, :size => 80, :title => "This field can't be left blank",:readonly => true %>

			<label for="video_focus">看点时间</label>
			<%= v.text_field :video_focus, :size => 80, :title => "This field can't be left blank",:readonly => true %>

			<label for="original_price">原价</label>
			<%= v.text_field :original_price, :size => 80, :title => "This field can't be left blank",:readonly => true %>

			<label for="privilege_price">优惠价</label>
			<%= v.text_field :privilege_price, :size => 80, :title => "This field can't be left blank",:readonly => true %>

			<label for="video_url">视频地址</label>
			<%= v.text_field :video_url, :size => 80, :title => "This field can't be left blank",:readonly => true %>

			<label for="video_img">图片</label>
			<% if @video.video_img != nil %>
			<%= image_tag @video.video_img, :width => 80 %>  <br/>
			<% end %>
			<div class="buttons">
				<%= link_to '返回' ,channel_videos_url(:forminfo=>@channel),:class => 'submit'%>
			</div>	
			<% end %>
		</div>
	</div>
</div>